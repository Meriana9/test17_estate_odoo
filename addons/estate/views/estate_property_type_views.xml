<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue de formulaire pour le type de propriété -->
    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Real Estate Property Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue de liste pour le type de propriété -->
    <record id="view_estate_property_type_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Real Estate Property Types">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Vue de recherche pour le type de propriété -->
    <record id="view_estate_property_type_search" model="ir.ui.view">
        <field name="name">estate.property.type.search</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <search string="Search Real Estate Property Types">
                <field name="name" string="Name"/>
            </search>
        </field>
    </record>


    
			<!-- Actions de vue -->
			<record id="action_menu_house" model="ir.actions.act_window">
				<field name="name">Houses</field>
				<field name="res_model">estate.house</field> 
				<field name="view_mode">tree,form</field> 
			</record>

			<!-- Actions de vue -->
			<record id="action_menu_apartment" model="ir.actions.act_window">
				<field name="name">apartments</field>
				<field name="res_model">estate.apartment</field> 
				<field name="view_mode">tree,form</field> 
			</record>

			<!-- Actions de vue -->
			<record id="action_menu_castle" model="ir.actions.act_window">
				<field name="name">Castles</field>
				<field name="res_model">estate.castle</field> 
				<field name="view_mode">tree,form</field> 
			</record>
</odoo>
