<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue tree pour les offres -->
    <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offers">
                <field name="price" />
                <field name="status" />
                <field name="partner_id" />
            </tree>
        </field>
    </record>

    <!-- Vue form pour les offres -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <header>
                    <button name="action_accept_offer" string="Accept" type="object" class="btn-primary" icon="fa-check"/>
                    <button name="action_refuse_offer" string="Refuse" type="object" class="btn-secondary" icon="fa-times"/>
                </header>
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="status" />
                        <field name="partner_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
